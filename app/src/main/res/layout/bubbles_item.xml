<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/bg_bubble"
    >


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/question_user"
            android:textStyle="normal|bold"
            android:textColor="#232A4E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="@+id/question_user"
            android:layout_alignParentEnd="true"
            android:textColor="#232A4E"
            android:id="@+id/question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.library.bubbleview.BubbleTextView
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/question_user"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:arrowWidth="8dp"
            app:angle="8dp"
            app:arrowHeight="10dp"
            app:arrowPosition="14dp"
            app:arrowLocation="left"
            app:bubbleColor="#4F58D7"
            app:arrowCenter="true"
            />

    </RelativeLayout>
</ScrollView>