<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="18dp"
    >

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_title"
            android:src="@drawable/title"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edTitreQuestion"
            android:hint="Titre de votre question.."
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/profile_info"
            android:textSize="20sp"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/commencer"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/login"
            android:layout_toRightOf="@+id/img_title"
            android:layout_marginLeft="10dp">
        </com.rengwuxian.materialedittext.MaterialEditText>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_des_qst"
            android:src="@drawable/qst_mark"
            android:layout_below="@+id/img_title"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edContenuQuestion"
            android:hint="EnoncÃ© de votre question.."
            android:inputType="text"
            android:textColor="@color/commencer"
            android:textColorHint="@color/profile_info"
            android:textSize="20sp"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/commencer"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/login"
            android:layout_below="@+id/edTitreQuestion"
            android:layout_toRightOf="@+id/img_des_qst"
            android:layout_marginLeft="10dp">
        </com.rengwuxian.materialedittext.MaterialEditText>


    </RelativeLayout>


</androidx.cardview.widget.CardView>