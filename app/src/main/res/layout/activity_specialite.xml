<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Departement"
    android:background="@drawable/raye">

 <Space
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"></Space>
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">

       <Button
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:padding="20dp"
           android:text="Tronc commun"
           android:textStyle="italic"
           android:textSize="18sp"
           android:id="@+id/l1l2"
           android:background="@drawable/l"
           android:layout_marginTop="10dp"
           ></Button>

   </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Licence"
            android:textStyle="italic"
            android:textSize="18sp"
            android:id="@+id/Lic"
            android:background="@drawable/i"
            android:layout_marginTop="10dp"
            ></Button>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Master"
            android:textStyle="italic"
            android:textSize="18sp"
            android:id="@+id/Master"
            android:background="@drawable/s"
            android:layout_marginTop="10dp"></Button>
    </FrameLayout>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></androidx.legacy.widget.Space>
</LinearLayout>